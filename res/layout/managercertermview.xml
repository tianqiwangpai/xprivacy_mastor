        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="日新增量(已完成/全部)" />

            <TextView
                android:id="@+id/newdatashow"
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
