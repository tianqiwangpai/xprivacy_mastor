                            android:text="隔周" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="周存留率:" />

                        <EditText
                            android:id="@+id/nextweekstaylv"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
