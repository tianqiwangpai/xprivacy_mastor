                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
