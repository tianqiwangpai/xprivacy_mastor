                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:id="@+id/tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <CheckBox
                            android:id="@+id/nextweekflag"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
